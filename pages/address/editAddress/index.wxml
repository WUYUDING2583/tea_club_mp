<!--pages/address/editAddress/index.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">添加收货地址</view>
</cu-custom>
<form>
  <view class="cu-form-group">
    <view class="title">收货人</view>
    <input bindinput="nameInput" value="{{name}}"></input>
  </view>
	<view class="cu-form-group">
		<view class="title">手机号码</view>
		<input bindinput="phoneInput" value="{{phone}}"></input>
	</view>
  <view class="cu-form-group">
    <view class="title">所在地区</view>
    <picker mode="region" bindchange="RegionChange" value="{{region}}" custom-item="{{customItem}}">
      <view class="picker">
        {{region[0]}}，{{region[1]}}，{{region[2]}}
      </view>
    </picker>
  </view>
  <view class="cu-form-group align-start">
		<view class="title">详细地址</view>
		<textarea maxlength="-1"  bindinput="detailInput" placeholder="如道路、门牌号、小区、楼栋号、单元室等" value="{{detail}}"></textarea>
	</view>
	<view class="cu-form-group">
		<view class="title">设为默认地址</view>
		<switch class="blue radius sm" bindchange="isDefaultChange" checked="{{isDefaultAddress}}"></switch>
	</view>
</form>
<view class="flex padding justify-center">
  <button class="cu-btn bg-green lg" style="width:80vw" bindtap="save"><text class="cuIcon-loading2 iconfont-spin" wx:if="{{retrieveRequestQuantity>0}}"></text>保存</button>
</view>

<view class="text-center padding" style="display:fixed;bottom:0" wx:if="{{addressId!=null}}" bindtap="showModal">删除收货地址</view>


<view class="cu-modal {{modalName=='deleteModal'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">删除地址</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view class="padding-xl">
      确认要删除此地址？
    </view>
    <view class="cu-bar bg-white justify-end">
      <view class="action flex justify-between" style="width:100%;">
        <button class="cu-btn line-green text-green" style="width:40%;" bindtap="hideModal">取消</button>
        <button class="cu-btn bg-green " style="width:40%;" bindtap="_deleteAddress">确定</button>
      </view>
    </view>
  </view>
</view>