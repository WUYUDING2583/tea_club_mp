<!--pages/address/addressList/index.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">我的收货地址</view>
</cu-custom>
<scroll-view style="height:100vh;">
  <navigator hover-class="none" url="../addressDetail/index">
    <view class="text-center padding text-grey">添加收货地址</view>
  </navigator>
  <view class="cu-list menu sm-border">
    <view class="cu-item" wx:for="{{userInfo.addresses}}">
      <view class="content">
        <view class="text-lg">{{item.name}}
          <text class="text-grey margin-left text-sm">{{item.phone}}</text>
        </view>
        <view style="word-wrap:break-word; word-break:break-all;">
          <view class="cu-tag line-orange radius margin-right" wx:if="{{item.isDefault}}">默认</view>
          <text class="margin-right text-gray">{{item.province}}</text>
          <text class="margin-right text-gray">{{item.city}}</text>
          <text class="margin-right text-gray">{{item.district}}</text>
          <text class="margin-right text-gray">{{item.detail}}</text>
        </view>
      </view>
      <view class="action padding text-center" style="width:15vw;">
        <text class="text-grey">编辑</text>
      </view>
    </view>
  </view>
</scroll-view>