<!--pages/box/boxDetail/index.wxml-->
<wxs src="../../tool.wxs" module="tool" />
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">{{byBoxes[boxId].name}}</view>
</cu-custom>
<view>
  <view class="cu-card article no-card">
    <view class="cu-item shadow">
      <view class="content margin-top">
        <image src="{{byBoxes[boxId].photo}}" mode="aspectFill"></image>
        <view class="desc">
          <view class="text-content">{{byBoxes[boxId].name}}</view>
          <view>{{byBoxes[boxId].description}}</view>
        </view>
      </view>
    </view>
  </view>
  <view class="cu-list menu margin-top">
    <view class="cu-item {{menuArrow?'arrow':''}}">
      <view class="content ">
        <text class="cuIcon-time text-grey"></text>
        <text class="text-grey">开放时间</text>
      </view>
      <view class="action">{{tool.convertTimestampToHHMM(byShops[shopId].todayOpenHour.startTime)}}~{{tool.convertTimestampToHHMM(byShops[shopId].todayOpenHour.endTime)}}</view>
    </view>
    <view class="cu-item margin-top">
      <view class="content padding-top">
        <text class="cuIcon-info text-grey"></text>
        <text class="text-grey">预约须知</text>
        <view wx:for="{{byBoxes[boxId].infos}}" wx:key="unique" class="padding">
          <view class="text-black margin-top margin-left">{{item.title}}</view>
          <view class="text-grey margin-top margin-left">
            <text class="cuIcon-title margin-right"></text>{{item.info}}</view>
        </view>
      </view>
    </view>
  </view>
  <view id="product-detail" class="cu-bar bg-white solid-bottom margin-top">
    <view class='action'>
      <text class='cuIcon-titles text-orange '></text> 包厢详情
    </view>
  </view>
  <view class="cu-list menu margin-bottom-xl"style="margin-bottom:50px;">
    <image wx:for="{{byBoxes[boxId].photos}}" wx:key="unique" src="{{item}}" />
  </view>
</view>
<view class="cu-bar bg-white tabbar border shop" style="position:fixed;bottom:0;width:100vw;">
  <view class="action" style="width:50vw">
    <text class="text-xl text-red" wx:if="{{byBoxes[boxId].price.ingot>0}}">{{byBoxes[boxId].price.ingot}}元宝 </text>
    <text class="text-xl text-red" wx:if="{{byBoxes[boxId].price.credit>0}}">{{byBoxes[boxId].price.credit}}积分</text>
    <text class="text-sm text-grey">每泡茶({{byBoxes[boxId].duration}}分钟)</text>
  </view>
  <view class="action " style="width:40vw;">
    <button class="cu-btn bg-blue round shadow-blur" style="width:60%;" bindtap="navigateToReserve">立即预约</button>
  </view>
</view>
